{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
    //   "noImplicitReturns": true,
    //   "noImplicitThis": true,
    //   "noImplicitAny": true,
    //   "strictNullChecks": true,
      "skipLibCheck": true,
    },
    "exclude": [
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts"
    ],
    "types": [
      "typePatches"
    ]
}